#!/bin/sh
function i3_suspend {
    if which systemctl > /dev/null 2>&1; then
        systemctl suspend
    else
        sudo /usr/sbin/pm-suspend
    fi
}

function i3_hibernate {
    if which systemctl > /dev/null 2>&1; then
        systemctl hibernate
    else
        sudo /usr/sbin/pm-hibernate
    fi
}

function i3_reboot {
    if which systemctl > /dev/null 2>&1; then
        systemctl reboot
    else
        sudo /sbin/reboot
    fi
}

function i3_poweroff {
    if which systemctl > /dev/null 2>&1; then
        systemctl poweroff
    else
        sudo /sbin/poweroff
    fi
}

case "$1" in
    lock)
        xautolock -locknow
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        xautolock -locknow && i3_suspend
        ;;
    hibernate)
        xautolock -locknow && i3_hibernate
        ;;
    reboot)
        i3_reboot
        ;;
    shutdown)
        i3_poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
