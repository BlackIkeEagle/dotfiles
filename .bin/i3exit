#!/bin/sh
case "$1" in
    lock)
        xautolock -locknow
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        xautolock -locknow && systemctl suspend
        ;;
    hibernate)
        xautolock -locknow && systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
